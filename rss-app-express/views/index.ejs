<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>RSS Feed Display</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>RSS Feed</h1>
    <form action="/" method="GET">
      <input type="text" name="url" placeholder="Nhập URL của RSS feed" />
      <button type="submit">Tải RSS</button>
    </form>
    <div id="rssContent">
      <% items.forEach(item => { %>
      <div class="rssItem">
        <h2><%= item.title %></h2>
        <p><%= item.description %></p>
      </div>
      <% }); %>
    </div>
  </body>
</html>
